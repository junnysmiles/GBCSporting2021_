@model Incident
@{
    string title = ViewBag.Action + " Incident";
    ViewData["Title"] = ViewBag.Title;
}

<div class="pt-4">
    <h2>@title</h2>
</div>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Customer">Customer</label>
        <select class="form-control">
            <option>Ben Jerry</option>
            <option>Tony Stark</option>
            <option>Bruce Wayne</option>
            <option>Clark Kent</option>
            <option>Harvey Dent</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Product">Product</label>
        <select class="form-control">
            <option>Toys</option>
            <option>Cars</option>
            <option>Phones</option>
            <option>Computers</option>
            <option>Clothes</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control">
    </div>

    <div class="form-group">
        <label for="Technician">Technician</label>
        <select class="form-control">
            <option>Jerry</option>
            <option>Tom</option>
            <option>Dan</option>
            <option>Harry</option>
            <option>Timmy</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="OpenDate">OpenDate</label>
        <input asp-for="OpenDate" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CloseDate">CloseDate</label>
        <input asp-for="CloseDate" class="form-control">
    </div>

    <button type="submit" class="btn btn-info">@ViewBag.Action</button>
    <a asp-controller="Incident" asp-action="Incident" class="btn btn-danger">Cancel</a>
</form>
