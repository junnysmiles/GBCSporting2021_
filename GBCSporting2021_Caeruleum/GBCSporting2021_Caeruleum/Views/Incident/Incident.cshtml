@model IEnumerable<Incident>
@{
  ViewData["Title"] = "Incidents";
}

<div class="pt-4">
  <h2 class="pb-2">Manage Incidents</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Customer</th>
        <th scope="col">Product</th>
        <th scope="col">Date Opened</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>

    </thead>
    <tbody>
      @foreach(Incident i in Model)
      {
        <tr>
          <td>@i.Title</td>
          <td>@String.Format("{0}, {1}", i.Customer.FirstName, i.Customer.LastName)</td>
          <td>@i.Product.Name</td>
          <td>@i.OpenDate/td>
          <td><a type="button" class="btn btn-warning" asp-area="" asp-controller="Incident" asp-action="Edit">Edit</a></td>
          <td><a type="button" class="btn btn-danger" asp-area="" asp-controller="Incident" asp-action="Delete">Delete</a></td>
        </tr>
      }
    </tbody>
  </table>
  <a type="button" class="btn btn-info" asp-area="" asp-controller="Incident" asp-action="Add">Add Incident</a>
</div>