@model Incident
@{
    ViewData["Title"] = "Delete Incident";
}

<div class="pt-4">
    <h1 class="pb-3">Delete This Incident</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Customer</th>
          <th>Product</th>
          <th>Technician</th>
          <th>Date Opened</th>
          <th>Date Closed</th>
        </tr>
      </thead>
      
      <tbody>
        <tr>
          <td>@Model.Title</td>
          <td>@Model.Description</td>
          <td>@ViewBag.CustomerName</td>
          <td>@ViewBag.ProductName</td>
          <td>@ViewBag.TechnicianName</td>
          <td>@Model.OpenDate.ToString("yyyy-MM-dd")</td>
          <td>@Model.NullDateToString(Model.CloseDate, "yyyy-MM-dd")</td>
        </tr>
      </tbody>
      <tr>
      </tr>
    </table>
</div>

<div class="pt-3">
    <form asp-action="Delete" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Incident" asp-action="Incident" class="btn btn-secondary">Cancel</a>
    </form>
</div>
