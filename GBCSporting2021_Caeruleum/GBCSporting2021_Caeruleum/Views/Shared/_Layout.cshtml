@{
  string ActiveNav(string action)
  {
    string currentAction = ViewContext.RouteData.Values["Action"].ToString();
    return (action == currentAction) ? "active" : "";
  }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Caeruleum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-info navbar-expand-sm navbar-toggleable-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Caeruleum</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Index")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Product")" asp-area="" asp-controller="Product" asp-action="Product">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Technician")" asp-area="" asp-controller="Technician" asp-action="Technician">Technicians</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Customer")" asp-area="" asp-controller="Customer" asp-action="Customer">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Incident")" asp-area="" asp-controller="Incident" asp-action="Incident">Incidents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Registration")" asp-area="" asp-controller="Registration" asp-action="Registration">Registrations</a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link @ActiveNav("About")" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Caeruleum
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
