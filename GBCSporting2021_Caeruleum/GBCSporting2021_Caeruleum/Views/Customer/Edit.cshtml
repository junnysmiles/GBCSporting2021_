@model Customer
@{
    string title = ViewBag.Action + "Customer";
    ViewData["Title"] = ViewBag.Title;
}

<div class="pt-4">
    <h2 class="pb-3">@title</h2>
</div>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label for="Country">Country</label>
        <select class="form-control">
            <option>Canada</option>
            <option>France</option>
            <option>Germany</option>
            <option>Italy</option>
            <option>Spain</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <button type="submit" class="btn btn-info">@ViewBag.Action</button>
    <a asp-controller="Customer" asp-action="Customer" class="btn btn-danger">Cancel</a>
</form>

