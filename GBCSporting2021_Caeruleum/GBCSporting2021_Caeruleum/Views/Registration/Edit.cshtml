@model Registration
@{
    string title = ViewBag.Action + " Registration";
    ViewData["Title"] = ViewBag.Title;
}

<div class="pt-4">
    <h2>@title</h2>
</div>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Customer">Customer</label>
        <select class="form-control">
            <option>Ben Jerry</option>
            <option>Tony Stark</option>
            <option>Bruce Wayne</option>
            <option>Clark Kent</option>
            <option>Harvey Dent</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Product">Product</label>
        <select class="form-control">
            <option>Toys</option>
            <option>Cars</option>
            <option>Phones</option>
            <option>Computers</option>
            <option>Clothes</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info">@ViewBag.Action</button>
    <a asp-controller="Registration" asp-action="Registration" class="btn btn-danger">Cancel</a>
</form>
