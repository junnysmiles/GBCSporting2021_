@model Technician
@{
  string title = ViewBag.Action + " Technician";
  ViewData["Title"] = ViewBag.Action;
}

<div class="pt-4">
    <h2 class="pb-3">@title</h2>
</div>

<form asp-action="@ViewBag.Action" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" value="@ViewBag.FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" value="@ViewBag.LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" value="@ViewBag.Phone" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Email">Email Address</label>
      <input asp-for="Email" value="@ViewBag.Email" class="form-control">
    </div>

    <button type="submit" class="btn btn-info">@ViewBag.Action</button>
    <a asp-controller="Technician" asp-action="Technician" class="btn btn-danger">Cancel</a>
</form>
